/* general style */
body, p, label, input{margin: 0;padding: 0;}
body{background-color: #edeef0;}
a{text-decoration: none;color: #000;}
i{font-style: normal;}
button, input{border: none;outline: none;}


/* helper style */
.l{float: left;}
.r{float: right;}
.tips{font-size: 12px;color: #949494;}
.reset{color: #f68121;}


/* page structor style */
header .head{padding: 10px 18px;border-bottom: #D3D3D3 solid 2px;background-color: #fff;overflow: hidden;
			vertical-align: middle;}
header .head a{color: #000;text-decoration: none;height: 22px;float: left;}
header .head .register{color: #f68121;float: right;}
header .head .back{width: 20px;height: 22px;padding-right: 4px;}

/*密码错误提示*/
article .error{line-height: 24px;height: 24px;visibility: hidden;margin-bottom: 6px;}
article .error i{float: left;margin-right: 6px;margin-left: 22px;height: 18px;padding-top: 3px;}
article .error i img{width: 18px;height: 18px;}
article .error p{float: left;color: red;}


article .log{width: 100%;text-align: center;margin-top: 24px;margin-bottom: 14px;overflow: hidden;}
article .wrapper{background-color: #fff;padding: 0 24px;border-top: #ddd solid 1px;border-bottom: #ddd solid 1px;}
article .wrapper input{border: none;outline: none;margin-left: 6px;height: 24px;width: 213px;color: #acacac;}
article .wrapper div{padding: 10px 0;height: 36px;line-height: 36px;}
article .wrapper .count{border-bottom: #ddd solid 1px;}
article button{height: 40px;width: 88%;border: none;border-radius: 50px;color: #fff;
		display: inline-block;}

footer{margin-top: 10%;}
footer p{color: #BCBCBC;font-size: 12px;text-align: center;}


/* page components style */

/*1、遮罩层*/
.mask_layer{position: absolute;width: 100%;height: 100%;background-color: #ddd;top: 0;left: 0;opacity: 0.5;
			filter: alpha(opacity=50);-z-index: 1000;display: none;}
.mask_layer img{width: 70px;height: 70px;z-index: 1001;position: absolute;left: 50%;top: 50%;
			margin-left: -35px;margin-top: -35px;}



